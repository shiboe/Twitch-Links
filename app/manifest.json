{
  "manifest_version": 2,

  "name": "Twitch Links",
  "description": "Catch links in fast moving twitch chat, moving them to a managable list for easy clicking!",
  "version": "3.0.0",

  "icons": {
    "48": "images/icon48.png"
  },

  "content_scripts": [{
    "matches": ["https://go.twitch.tv/*"],
    "css": ["styles/content.css", "styles/font-awesome.min.css"],
    "js": ["scripts/content.js"]
  }],

  "web_accessible_resources": [
    "fonts/*.*"
  ],

  "permissions": [
   "activeTab",
   "storage"
   ]
}
